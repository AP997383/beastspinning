<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/indicators_colors"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#E91E63"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text="Reservado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#D1D1D1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text="Disponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#009688"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text="Seleccionado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <dev.jahidhasanco.seatbookview.SeatBookView
        android:layout_below="@+id/indicators_colors"
        android:layout_above="@+id/carousel4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/layoutSeat"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:seat_gaping="10dp"
        app:seat_text_size="12sp"
        app:available_seats_text_color="#59575C"
        app:seat_select_limit="2"
        />


    <com.adolfoponce.spinning.utils.ui.carrousel.ImageCarousel
        android:layout_above="@+id/select_hour"
        android:id="@+id/carousel4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:translationZ="8dp"
        app:autoPlay="false"
        app:autoPlayDelay="4000"
        app:carouselGravity="CENTER"
        app:carouselPaddingBottom="8dp"
        app:autoWidthFixing="false"
        app:carouselPaddingTop="8dp"
        app:carouselType="SHOWCASE"
        app:imageScaleType="centerCrop"
        app:scaleOnScroll="true"
        app:scalingFactor=".25"
        app:showBottomShadow="false"
        app:showCaption="false"
        app:showIndicator="false"
        app:showNavigationButtons="false"
        app:showTopShadow="false" />

    <com.adolfoponce.spinning.utils.ui.carrousel.ImageCarousel
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/select_hour"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:translationZ="8dp"
        app:autoPlay="false"
        app:autoPlayDelay="4000"
        app:carouselGravity="CENTER"
        app:carouselPaddingBottom="8dp"
        app:autoWidthFixing="false"
        app:carouselPaddingTop="8dp"
        app:carouselType="SHOWCASE"
        app:imageScaleType="centerCrop"
        app:scaleOnScroll="true"
        app:scalingFactor=".25"
        app:showBottomShadow="false"
        app:showCaption="false"
        app:showIndicator="false"
        app:showNavigationButtons="false"
        app:showTopShadow="false" />

</RelativeLayout>