<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.MyApp.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/latobold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="TextAppearance.MyApp.DisplaySmallTitle" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.MyApp.Mini" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/productbold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.MyApp.description" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/rongellining</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="zc_style_fast_reservation" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ZHBottomSheetStyle</item>
    </style>
    <style name="ZHBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/zc_shape_search_view</item>
    </style>


    <style name="IXEditText.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">#8C8C8C</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">#EEEEEE</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="IXEditText.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_input_text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="IXEditText.TextInputSelect" parent="IXEditText.TextInputEditText">
        <item name="boxStrokeColor">#852626</item>
        <item name="boxStrokeWidth">4dp</item>
    </style>

    <style name="IXButton.Filled.red" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">64dp</item>
        <item name="backgroundTint">@color/btn_outline_colors_btp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:stateListAnimator">@animator/btn_state_list_anim</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>